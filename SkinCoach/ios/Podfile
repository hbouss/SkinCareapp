# ios/Podfile

platform :ios, '13.0'
install! 'cocoapods', :deterministic_uuids => false

# ── 1) Stub global pour Expo.podspec ─────────────────────────────
# Définit noop pour les méthodes que Podspec appelle
def get_folly_config
  { compiler_flags: [] }
end

def install_modules_dependencies(spec); end

# ── 2) Charger les scripts d’autolinking officiels ───────────────
require_relative '../node_modules/expo/scripts/autolinking'
require_relative '../node_modules/react-native/scripts/react_native_pods'

# ── 3) Votre seule target, minimale ──────────────────────────────
target 'SkinCoach' do
  # Charge Expo.podspec et configure tous les modules Expo
  use_expo_modules!

  # Configure React Native (Hermes / Fabric selon flags prébuild)
  use_react_native!(
    :path => '../node_modules/react-native'
  )
end