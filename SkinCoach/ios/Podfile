# ios/Podfile

platform :ios, '15.1'
install! 'cocoapods', deterministic_uuids: false

# 1) Charger le script de React Native (pour use_react_native! et post_install)
require_relative '../node_modules/react-native/scripts/react_native_pods'

# 2) Charger le script Expo autolinking (pour use_expo_modules!)
require_relative '../node_modules/expo/scripts/autolinking'

# 3) STUB global pour éviter les erreurs dans Expo.podspec
unless defined?(get_folly_config)
  def get_folly_config; { compiler_flags: [] }; end
end
unless defined?(install_modules_dependencies)
  def install_modules_dependencies(spec); end
end

target 'SkinCoach' do
  # Intègre Expo Modules (Expo.podspec)
  use_expo_modules!

  # Autolinking des autres modules natifs
  config = use_native_modules!

  # Configure React Native Core
  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => true,
    :fabric_enabled => false,
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(installer, mac_catalyst_enabled: false)
    installer.pod_targets.each do |pod|
      pod.build_configurations.each do |c|
        c.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      end
    end
  end
end