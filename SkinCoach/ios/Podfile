platform :ios, '15.1'
install! 'cocoapods', deterministic_uuids: false

# 1) Charger React Native pods (ne définit PAS prepare_react_native_project!)
require_relative '../node_modules/react-native/scripts/react_native_pods'

# 2) Charger l’autolinker Expo (définit les méthodes Expo nécessaires)
require_relative '../node_modules/expo/scripts/autolinking'

# 3) (Plus d'appel à prepare_react_native_project!)

target 'SkinCoach' do
  use_expo_modules!                     # Intègre Expo.podspec, sans planter
  config = use_native_modules!          # autolinking natif

  use_react_native!(
    path: config[:reactNativePath],
    hermes_enabled: true,               # ou selon votre config
    app_path: "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(installer, mac_catalyst_enabled: false)
    installer.pod_targets.each do |pod|
      pod.build_configurations.each do |c|
        c.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      end
    end
  end
end